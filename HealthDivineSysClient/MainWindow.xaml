<Window x:Class="HealthDivineSysClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthDivineSysClient"
        xmlns:Dialogs="clr-namespace:HealthDivineSysClient.View.Dialogs"
        mc:Ignorable="d"
        Title="Health Divine" Height="770" Width="1370"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--SideBar-->
        <Grid Width="64" Name="SideBar_Grid">
            <Border Background="{StaticResource PrimaryColor}">
                <Border.Effect>
                    <DropShadowEffect Direction="0" Opacity=".5" BlurRadius="10"/>
                </Border.Effect>
            </Border>
            <StackPanel Margin="0 20">
                <Image Source="Resources/Images/Logo.png" Width="30"/>
                <Border Background="White" Height="1" Margin="10 20"/>
                <Button Name="Patients_Button" Style="{StaticResource Icon_Button}" Content="&#xf2bd;" FontFamily="{StaticResource FontAwesomeRegular}" Click="ChangeView"
                        ToolTipService.InitialShowDelay="0" ToolTipService.BetweenShowDelay="0">
                    <Button.ToolTip>
                        <ToolTip Content="Mis pacientes" Style="{StaticResource Normal_Tooltip}"/>
                    </Button.ToolTip>
                </Button>
                <Button Name="Calendar_Button" Style="{StaticResource Icon_Button}" Content="&#xf133;" FontFamily="{StaticResource FontAwesomeRegular}" Margin="0 20" Click="ChangeView"
                                ToolTipService.InitialShowDelay="0" ToolTipService.BetweenShowDelay="0">
                    <Button.ToolTip>
                        <ToolTip Content="Mi calendario" Style="{StaticResource Normal_Tooltip}"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

            <StackPanel Margin="0 20" VerticalAlignment="Bottom">
                <Border Background="White" Height="1" Margin="10 0"/>

                <Button Name="Logout_Button" Style="{StaticResource Icon_Button}" Content="&#xf08b;" Margin="0 20" Click="ChangeView"
                ToolTipService.InitialShowDelay="0" ToolTipService.BetweenShowDelay="0">
                    <Button.ToolTip>
                        <ToolTip Content="Cerrar sesión" Style="{StaticResource Normal_Tooltip}"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </Grid>

        <!--Content-->
        <Frame Name="Frame_Main" Grid.Column="1" Style="{StaticResource Frame}">
            
        </Frame>

        <Grid Grid.Column="1" Background="#60000000" Opacity="0" Name="Opacity_Grid" Visibility="Collapsed"/>

    </Grid>
</Window>
