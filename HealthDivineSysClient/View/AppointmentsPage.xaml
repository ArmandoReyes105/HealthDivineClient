<Page x:Class="HealthDivineSysClient.View.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthDivineSysClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1306" Background="{StaticResource BackgroundColor}"
      Title="AppointmentsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Content="&#xf177;" Style="{StaticResource Icon_Button}" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center"/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Mis " Style="{StaticResource Title_Text}"/>
                <TextBlock Text="Citas" Style="{StaticResource Title_Text}" Foreground="{StaticResource AccentColor}"/>
            </StackPanel>
        </DockPanel>
        <StackPanel Margin="0 20 0 0" Grid.Row="2" Name="Appointment_Panel">
            
        </StackPanel>
    </Grid>
</Page>
