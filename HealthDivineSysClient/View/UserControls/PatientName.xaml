<UserControl x:Class="HealthDivineSysClient.View.UserControls.PatientName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthDivineSysClient.View.UserControls"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="/Resources/Images/FemaleUser_Image.png" Height="40" Width="40"/>
            <StackPanel VerticalAlignment="Center" Margin="10 0 0 0">
                <TextBlock Name="Name_TextBlock" Text="Nombre" Style="{StaticResource Subtitle_Text}"/>
                <TextBlock Name="Lastname_TextBlock" Text="Apellidos" Style="{StaticResource Normal_Text}"/>
            </StackPanel>
        </StackPanel>
        <Border Background="White" Height="1" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
