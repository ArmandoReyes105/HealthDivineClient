<UserControl x:Class="HealthDivineSysClient.View.UserControls.DividerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthDivineSysClient.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0 0 0 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding DividerText, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource Subtitle_Text}" Margin="0 0 15 0" VerticalAlignment="Center"/>
        <Border Height="1" Grid.Column="1" Background="White" CornerRadius=".5"/>
    </Grid>
</UserControl>
